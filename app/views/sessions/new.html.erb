    <h1 align="center">Log In</h1>
    
       <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

    <div class = 'form-group'>
         <div class = 'control-lable-col-sm-2'>
            <%= f.label :email %> 
        </div>
    <div class ='col-sm-8'>    
        <%= f.email_field :email, class: "form-control", placeholder:"enter email", autofocus: true  %>
    </div>    
     
    </div>
    
    <div class = 'form-group'>
        <div class = 'col-xs-8'> 
          <%= f.label :password  %> 
        </div>    
    
        <div class = 'col-xs-8'>
           <%= f.password_field :password, class: "form-control", autocomplete: "off"  %>
        </div>
    </div>
    
    <br/>
    
    <div class = "form-group">
        <div class = "col-sm-10 col-sm-offset-0">
            <%= f.submit "Login", class: "btn btn-primary btn-large" %>
        </div>
    </div>
    
<% end %>

